#-------------------------------
# Repo specific config
#-------------------------------

[general]
root_dir: /var/www/domain.com/

[op_gitflow]

# Will create a folder for each branch within root dir
active: False

[op_mysql_database_copy]

active: True

# You can place u and p in general.ini 'operations' section
# if you want all repos to use same access details
db_u: example
db_p: password

# The database names are auto-generated by default
# i.e. Copied from 'repo_name_master' to 'repo_name_branch_name'
# (non-alphanumeric chars are replaced with _)

# Optional prefix (replaces 'repo_name')
# 'branch_name' is always added to the database name
# db_name_prefix: hello_

# Optional static from database name
# db_name_from: db_name

[op_dir_copy]

active: False

# Place everything in this folder...
# copy_from_dir: /var/www/breed/copy

# ...into this folder.
# Optional - If unset, default is root_dir/branch_name
# copy_to_dir: /var/www/example
